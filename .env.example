# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mercado_automotor
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# MercadoLibre API
# Registrar app en: https://developers.mercadolibre.com.ar/apps
MERCADOLIBRE_CLIENT_ID=your_client_id_here
MERCADOLIBRE_CLIENT_SECRET=your_client_secret_here
MERCADOLIBRE_RATE_LIMIT=100

# BCRA API
BCRA_API_BASE_URL=https://api.bcra.gob.ar
BCRA_TIMEOUT=30

# Scraping Configuration
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY_MIN=3
SCRAPING_DELAY_MAX=7
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3

# URLs de fuentes
ACARA_BASE_URL=https://www.acara.org.ar
FACCARA_BASE_URL=https://www.faccara.org.ar
ADEFA_BASE_URL=https://www.adefa.org.ar

# Airflow
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://postgres:postgres@localhost:5432/airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here

# Streamlit
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Environment
ENVIRONMENT=development

# Selenium/Chrome
CHROME_DRIVER_PATH=auto
HEADLESS_BROWSER=true

# Analytics
FORECASTING_PERIODS=12
MIN_DATA_POINTS=24
CONFIDENCE_INTERVAL=0.95

# API (FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# Data paths
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_MODELS_PATH=./data/models
